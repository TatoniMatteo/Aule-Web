<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <!-- servlet -->
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.univaq.project.auleweb.controller.controller.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Homepage</servlet-name>
        <servlet-class>com.univaq.project.auleweb.controller.controller.Homepage</servlet-class>
    </servlet>
   
    <!-- servlet-mapping -->
   
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping> 
    
    <servlet-mapping>
        <servlet-name>Homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    
    <!-- welcome -->
    
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>
    
    <!-- session -->
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- resource -->
    
    <resource-ref>
        <res-ref-name>jdbc/auleweb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
    <!-- context params -->
    
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/auleweb</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>resources/templates</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
   
    <!--
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>base/errore.ftl.html</param-value>
    </context-param>
    -->
    
</web-app>
